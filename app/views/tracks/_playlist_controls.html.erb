

<div class="controlsWrapper">
  <h5> 
    <%= simple_form_for(@track, remote: true) do |f| %>
      <% if User.find(@user).tracks.empty? %>
        <%= f.text_field :original_url, :class => 'url_field', :value => 'https://soundcloud.com/youngdaniel/sets/dp911' %>
      <% else %>
        <%= f.text_field :original_url, :class => 'url_field', :placeholder => 'enter a soundcloud track or playlist url' %>
      <% end %>
        <div class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="drop3" role="button"><i class="fa fa-cog playlist_cog"></i></a>
          <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="drop3">

            <li role="presentation"><%= link_to '<i class="fa fa-exchange"></i> DJ This List</a>'.html_safe, dj_this_list_tracks_path, remote: true, method: :get, :role => "menuitem", :tabindex => "-1" %></li>

            <li role="presentation"><%= link_to '<i class="fa fa-caret-square-o-right"></i> Single List'.html_safe, single_list_tracks_path, remote: true, method: :get, :class => ".single_trigger", :role => "menuitem", :tabindex => "-1" %></li>         

            <% if User.find(current_or_guest_user).play_thru == true %>
              <li role="presentation"><%= link_to '<i class="fa fa-pause"></i> Click Pause'.html_safe, click_pause_tracks_path, remote: true, method: :get, :role => "menuitem", :tabindex => "-1" %></li>              
            <% else %>
              <li role="presentation"><%= link_to '<i class="fa fa-play"></i> Play Thru'.html_safe, play_thru_tracks_path, remote: true, method: :get, :role => "menuitem", :tabindex => "-1" %></li>
            <% end %>


            <li role="presentation" class="disabled"><a role="menuitem" tabindex="-1" href="http://twitter.com/fat"><i class="fa fa-dropbox"></i> Add Dropbox</a></li>
            <li role="presentation"><%= link_to '<i class="fa fa-refresh"></i> Refresh'.html_safe, tracks_path, remote: true, method: :get, :role => "menuitem", :tabindex => "-1" %>
            <li role="presentation" class="divider"></li>
            <li role="presentation"><%= link_to '<i class="fa fa-minus-square"></i> Reset Lists'.html_safe, remove_all_tracks_path(@user), remote: true, method: :get, :role => "menuitem", :tabindex => "-1" %>
          </ul>
        </div>
    <% end %>
  </h5>
</div>

<script = "text/javascript">
  if ($(window.parent.document).contents().find(".leftside").width() > 1000) { 
    $(window.parent.document).contents().find('#left_side_frame' ).contents().find(".new_track").css("width","126%");
    }else{
    $(window.parent.document).contents().find('#left_side_frame' ).contents().find("ul.playlist li").css("font-size", "2em");
  }
</script>
