<% if @track.errors.any? %>
	<h2>There were errors saving your track</h2>
	<ul>
	<% @track.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>



<%= form_for @track do |f| %>
	<%= f.label :artist_name %>
	<%= f.text_field :artist_name %><br />
	<%= f.label :title %>	
	<%= f.text_field :title %><br />
	<%= f.label :stream_url %>	
	<%= f.text_field :stream_url %><br />
	<%= f.submit %>
<% end %>
