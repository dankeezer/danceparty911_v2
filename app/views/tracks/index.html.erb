<!DOCTYPE html>

<%= javascript_include_tag "http://code.jquery.com/jquery-latest.min.js" %>
<%= javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js" %>
<%= javascript_include_tag "bootstrap" %>

<%= render "pp_config_override" %>

<style type="text/css">


.dropdown-menu > li > a:hover,
.dropdown-menu > li > a:focus,
.dropdown-submenu:hover > a,
.dropdown-submenu:focus > a {
  color: #ffffff;
  text-decoration: none;
  background-color: #ff60d7;
  background-image: -moz-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ff60d7), to(#ff33cc));
  background-image: -webkit-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: -o-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: linear-gradient(to bottom, #ff60d7, #ff33cc);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0088cc', endColorstr='#ff0077b3', GradientType=0);
}

.dropdown-menu > .active > a,
.dropdown-menu > .active > a:hover,
.dropdown-menu > .active > a:focus {
  color: #ffffff;
  text-decoration: none;
  background-color: #ff60d7;
  background-image: -moz-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ff60d7), to(#ff33cc));
  background-image: -webkit-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: -o-linear-gradient(top, #ff60d7, #ff33cc);
  background-image: linear-gradient(to bottom, #ff60d7, #ff33cc);
  background-repeat: repeat-x;
  outline: 0;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0088cc', endColorstr='#ff0077b3', GradientType=0);
}


</style>


  <%= render "playlist_controls" %>

  <%= render "layouts/flash_notices" %>


<ul class="playlist sortable" id="tracks">
  <%= render @tracks %>
</ul>
<script = "text/javascript">
  if ($(window.parent.document).contents().find(".leftside").width() < 1000) { 
    $(window.parent.document).contents().find('#right_side_frame' ).contents().find("ul.playlist li").css("font-size", "1.15em");
    $(window.parent.document).contents().find('#left_side_frame' ).contents().find("ul.playlist li").css("font-size", "1.15em");
    $(window.parent.document).contents().find('#left_side_frame' ).contents().find(".new_track").css("width","119%");
    $(window.parent.document).contents().find('#right_side_frame' ).contents().find(".new_track").css("width","104%");
  }else{
    $(window.parent.document).contents().find('#left_side_frame' ).contents().find(".new_track").stop().animate({width:"126%"}, 500);
  }
</script>