<style type="text/css">

body{
margin: 0;
padding: 0;
border: 0;
overflow: hidden;
height: 100%; 
max-height: 100%; 
}

.leftside{
position: absolute;
top: 0;
bottom: 0; 
left: 0;
width: 50%; /*Width of frame div*/
height: 100%;
overflow: hidden; /*Disable scrollbars. Set to "scroll" to enable*/
background: #fff;
color: white;
}

.rightside{
position: absolute;
top: 0; 
left: 50%; /*Set left value to WidthOfFrameDiv*/
right: 0;
bottom: 0;
overflow: hidden; 
background: #fff;
}

.innertube{
margin: 0px; /*Margins for inner DIV inside each DIV (to provide padding)*/
}

* html body{ /*IE6 hack*/
padding: 0 0 0 200px; /*Set value to (0 0 0 WidthOfFrameDiv)*/
}

* html .rightside{ /*IE6 hack*/
height: 100%; 
width: 100%; 
}

</style>

		<script type="text/javascript">

			$(document).ready(function(){

				$('div.item').css({width: $('body').width()+'px'});

				$('#gallery').touchSlider({
					mode: 'index',
					single: true,
					center: true,
					prevLink: 'a.prev',
					nextLink: 'a.next',
					onInit: function(){
						var w = $('#container').width()*90/100;
						var h = $('#container').height()*95/100;
						var l = $('#gallery').height()+'px';
						$('#gallery div.item img').each(function(){
							$(this).css({'max-width': w});
							$(this).css({'max-height': h});
							$(this).parent().css({'line-height': l});
						});
					}
				});
			});
			addEventListener("load", function() {
				setTimeout(hideURLbar, 0);
			}, false);
			function hideURLbar(){window.scrollTo(0,1);}
		</script>

		<style type="text/css">
			/* gallery styles */
			.gallery {width: 100%;overflow: hidden;}
			.gallery div.holder {width: 100%;position: relative;overflow: hidden;}
			.gallery div.list {margin: 0;padding: 0;list-style: none;width: 99999px;overflow: hidden;}
			.gallery div.item {float: left;}

			/* page styles */
			html, body {width: 100%;height: 100%;}
			body {margin: 0;padding: 0;font: 16px/22px Helvetica, Arial, sans-serif;color: #333;}
			a {color: #333;text-decoration: none;}
			#container {padding-top:0px;height: 100%;}
			#container div {display: block;height: 100%;}
			figure {height: 100%;display: block;margin: 0;padding:0 0px;text-align: center;vertical-align: middle;}
			#container div.item {vertical-align: middle;}
			img {max-height: 100%;max-width: 100%;vertical-align: middle;border: 0px solid #FFF;-webkit-border-radius: 4px;-moz-border-radius: 4px;border-radius: 4px;}
			#container div.gallery {height: 100%;padding-top: 0px;padding-bottom: 0px;position: relative;}
			a.prev, a.next {position: absolute;bottom: 4px;width: 48px;height:48px;background: url(buttons.png) no-repeat;text-indent:-9999px;overflow: hidden;}
			a.prev {left: 5px;}
			a.next {right: 5px;background-position: -48px 0;}
			.item {min-width:300px;}
			@media all and (min-width: 768px) {
				#container {padding-top: 0;}
			}
			@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5) {
				a.prev, a.next {background-image:url(buttons2x.png);background-size:96px 48px;}
			}
		</style>
