<style type="text/css">

.margin{
  margin-bottom: 10px;
}

.pink_h2
{
  color: #FF33CC !important;
  letter-spacing:-1px;
}

</style>


<div class="account-wall center">
  <center><h2 class="pink_h2">sign up</h2></center>
  <%= simple_form_for(resource, :class => "form-signin center", :as => resource_name, :url => registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>

    <div class="margin"><%= f.email_field :email, :class => "form-control", :placeholder => "Email", :autofocus => true %></div>
    <div class="margin"><%= f.password_field :password, :class => "form-control", :placeholder => "Password" %></div>
    <div class="margin"><%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %></div>
    <%= f.submit "Sign up", :class => "btn btn-sm" %>
  <% end %>
</div>