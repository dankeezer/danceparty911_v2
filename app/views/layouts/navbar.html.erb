<%= analytics_init if Rails.env.production? %>

<!DOCTYPE html>
<html>
<head>
  <title>danceparty911</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
<style type="text/css">

input[type="email"],
input[type="password"],
input[type="input"],
.uneditable-input {
	margin-bottom: 0px !important;
	width: 175px;
  	height: 20px !important;
}

.btn.my_nav {
  margin: 0px !important;
  font-family: Helvetica, sans-serif;
  background-color: #FFFFFF;
  *background-color: #FFFFFF;
  border-color: #FFFFFF #FFFFFF #FFFFFF;
  color: #666;de
  letter-spacing: .5px;
  background-image: -moz-linear-gradient(top, #ffffff, #ffffff);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ffffff));
  background-image: -webkit-linear-gradient(top, #ffffff, #ffffff);
  background-image: -o-linear-gradient(top, #ffffff, #ffffff);
  background-image: linear-gradient(to bottom, #ffffff, #ffffff);
}

.btn.sign_up {
  margin: 0px !important;
  font-family: Helvetica, sans-serif;
  background-color: #FFFFFF;
  *background-color: #FFFFFF;
  border-color: #FFFFFF #FFFFFF #FFFFFF;
  color: #FF3300;
  font-weight: bold;
  letter-spacing: .5px;
  background-image: -moz-linear-gradient(top, #ffffff, #ffffff);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), to(#ffffff));
  background-image: -webkit-linear-gradient(top, #ffffff, #ffffff);
  background-image: -o-linear-gradient(top, #ffffff, #ffffff);
  background-image: linear-gradient(to bottom, #ffffff, #ffffff);
}

.navbar {
	margin: 0px;
	padding: 3px;
	height: 31px;
	background-color: #FF33cc;
	/*border-bottom:solid;
	border-width:2px;
	border-color: #555555;*/
}

.navbar-brand {
	padding: 3px;
}

.navbar-link {
  color: #FFFFFF !important;
  padding: 3px;
}

.navbar-text {
  line-height: 0px !important;
}

.navbar-text.other {
  line-height: 30px !important;

}

.soundcloud_image {
	border-width:1px;
	border-color: #FF33cc;
	padding-bottom: 1px;
}

</style>

</head>

<body>

	<div class="navbar">
		<% if user_signed_in? %>
			<div class="form-group">
				<%= link_to(image_tag("911logo548.gif", size: "175", :class => "navbar-brand"), "/") %>
				<% if current_user.username.nil? %>
					<p class="navbar-text pull-right"><%= link_to current_user.email, edit_user_registration_path, :class => "navbar-link" %>
				<% else %>
					<p class="navbar-text pull-right"><%= link_to current_user.username, edit_user_registration_path, :class => "navbar-link" %>
				<% end %>
				<%= link_to "sign out", destroy_user_session_path, :method => :delete, :class => "btn btn-sm my_nav" %></p>	
			</div>
		<% else %>
			<%= simple_form_for(resource, :class => "form-signin", :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div class="form-group">
				<%= link_to(image_tag("911logo548.gif", size: "175", :class => "navbar-brand"), "/") %>
				<%= f.email_field :email, :class => "form-control", :placeholder => "email", :autofocus => true %>
				<%= f.password_field :password, :class => "form-control", :placeholder => "password" %>

				<%= f.submit "sign in", :class => "btn btn-sm my_nav" %>
				<%= link_to "sign up", new_user_registration_path, :class => "btn btn-sm sign_up" %>
				<%= link_to image_tag("btn-connect-sc-l.png"), user_omniauth_authorize_path(:soundcloud), :class => "soundcloud_image" %>
				<p class="navbar-text other pull-right"><%= link_to "looking for the old site?", "/old", :class => "navbar-link" %></p>
			</div>
			<% end %>
		<% end %>
	</div>


	<%= yield %>
</body>

</html>
